{
  "name": "Auto Research Hook",
  "description": "Automatically run research agent before planning, development, or bug fixing",
  "version": "1.0.0",
  "hooks": [
    {
      "id": "research-before-planning",
      "name": "Research Before Planning",
      "description": "Run research agent when PM starts planning",
      "trigger": {
        "type": "message",
        "pattern": "(@PM|/pm|project manager)",
        "caseSensitive": false
      },
      "action": {
        "type": "command",
        "command": "python bin/research_agent.py --task \"${message}\" --type general",
        "workingDirectory": "${workspaceRoot}",
        "showOutput": true
      },
      "enabled": true
    },
    {
      "id": "research-before-development",
      "name": "Research Before Development",
      "description": "Run research agent when DEV starts implementation",
      "trigger": {
        "type": "message",
        "pattern": "(@DEV|/dev|implement|build feature)",
        "caseSensitive": false
      },
      "action": {
        "type": "command",
        "command": "python bin/research_agent.py --feature \"${message}\" --type feature",
        "workingDirectory": "${workspaceRoot}",
        "showOutput": true
      },
      "enabled": true
    },
    {
      "id": "research-before-bug-fix",
      "name": "Research Before Bug Fix",
      "description": "Run research agent when TESTER finds a bug",
      "trigger": {
        "type": "message",
        "pattern": "(@TESTER|/tester|bug|error|fails|broken)",
        "caseSensitive": false
      },
      "action": {
        "type": "command",
        "command": "python bin/research_agent.py --bug \"${message}\" --type bug",
        "workingDirectory": "${workspaceRoot}",
        "showOutput": true
      },
      "enabled": true
    },
    {
      "id": "research-before-architecture",
      "name": "Research Before Architecture",
      "description": "Run research agent when SA designs architecture",
      "trigger": {
        "type": "message",
        "pattern": "(@SA|/sa|architecture|design system)",
        "caseSensitive": false
      },
      "action": {
        "type": "command",
        "command": "python bin/research_agent.py --task \"${message}\" --type architecture",
        "workingDirectory": "${workspaceRoot}",
        "showOutput": true
      },
      "enabled": true
    },
    {
      "id": "research-on-demand",
      "name": "Research On Demand",
      "description": "Manual research trigger",
      "trigger": {
        "type": "message",
        "pattern": "(/research|@RESEARCH|research agent)",
        "caseSensitive": false
      },
      "action": {
        "type": "command",
        "command": "python bin/research_agent.py --task \"${message}\" --type general",
        "workingDirectory": "${workspaceRoot}",
        "showOutput": true
      },
      "enabled": true
    }
  ],
  "settings": {
    "autoApprove": false,
    "showNotifications": true,
    "logLevel": "info"
  }
}
