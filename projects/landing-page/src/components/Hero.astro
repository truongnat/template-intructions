<section 
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
  aria-labelledby="hero-title"
  role="banner"
>
  <!-- AI-inspired animated gradient mesh background with depth -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-indigo-950/50 to-slate-950" aria-hidden="true">
    <!-- Radial gradients for depth -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-blue-900/20 via-transparent to-transparent"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_right,_var(--tw-gradient-stops))] from-purple-900/20 via-transparent to-transparent"></div>
  </div>
  
  <!-- Neural network inspired grid -->
  <div class="absolute inset-0 opacity-20" aria-hidden="true">
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(99, 102, 241, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>
  
  <!-- Animated AI orbs with enhanced glassmorphism and blur -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute w-[700px] h-[700px] rounded-full blur-[120px] animate-float-slow opacity-40" 
         style="top: -15%; left: -15%; background: radial-gradient(circle, rgba(99, 102, 241, 0.9) 0%, rgba(139, 92, 246, 0.5) 40%, transparent 70%);"></div>
    <div class="absolute w-[600px] h-[600px] rounded-full blur-[100px] animate-float opacity-35" 
         style="top: 35%; right: -15%; animation-delay: 2s; background: radial-gradient(circle, rgba(236, 72, 153, 0.9) 0%, rgba(139, 92, 246, 0.5) 40%, transparent 70%);"></div>
    <div class="absolute w-[500px] h-[500px] rounded-full blur-[90px] animate-float-delayed opacity-30" 
         style="bottom: -15%; left: 35%; animation-delay: 4s; background: radial-gradient(circle, rgba(59, 130, 246, 0.9) 0%, rgba(99, 102, 241, 0.5) 40%, transparent 70%);"></div>
  </div>
  
  <!-- Floating particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="particle" style="top: 20%; left: 10%; animation-delay: 0s;"></div>
    <div class="particle" style="top: 60%; left: 80%; animation-delay: 2s;"></div>
    <div class="particle" style="top: 80%; left: 20%; animation-delay: 4s;"></div>
    <div class="particle" style="top: 40%; left: 60%; animation-delay: 1s;"></div>
    <div class="particle" style="top: 10%; left: 90%; animation-delay: 3s;"></div>
  </div>
  
  <div class="section-container relative z-10">
    <div class="text-center max-w-5xl mx-auto">
      <!-- AI-powered headline with modern typography -->
      <div class="mb-6 animate-slide-up">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-blue-500/10 to-purple-500/10 border border-blue-500/20 backdrop-blur-xl mb-6">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-blue-500"></span>
          </span>
          <span class="text-sm font-semibold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            AI-Powered SDLC Automation
          </span>
        </div>
      </div>
      
      <h1 id="hero-title" class="hero-title font-black mb-8 animate-slide-up leading-tight">
        <span class="block text-white">Ship Production-Ready Apps</span>
        <span class="block mt-3 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent animate-glow">
          in Days, Not Months
        </span>
      </h1>
      
      <!-- Enhanced subtitle with premium glassmorphism -->
      <div class="relative max-w-3xl mx-auto mb-12 animate-slide-up" style="animation-delay: 0.2s;">
        <!-- Glow effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/30 via-purple-500/30 to-pink-500/30 rounded-3xl blur-2xl"></div>
        
        <!-- Glass container with enhanced effects -->
        <div class="relative backdrop-blur-2xl bg-gradient-to-br from-white/[0.08] to-white/[0.03] border border-white/10 rounded-3xl p-10 shadow-glass-lg overflow-hidden">
          <!-- Shimmer overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full animate-shimmer"></div>
          
          <!-- Border gradient -->
          <div class="absolute inset-0 rounded-3xl p-[1px] bg-gradient-to-br from-blue-400/20 via-purple-400/20 to-pink-400/20 -z-10"></div>
          
          <p class="body-large text-blue-50 leading-relaxed relative z-10">
            Watch <span class="font-bold bg-gradient-to-r from-blue-300 via-purple-300 to-pink-300 bg-clip-text text-transparent">12 specialized AI agents</span> handle planning, design, development, testing, and deploymentâ€”while you focus on building great products.
          </p>
        </div>
      </div>
      
      <!-- Premium AI-style CTAs with enhanced effects -->
      <nav aria-label="Primary call-to-action" class="flex flex-col sm:flex-row gap-6 justify-center mb-16 animate-slide-up" style="animation-delay: 0.4s;">
        <a 
          href="#quick-start" 
          class="group relative inline-flex items-center justify-center gap-3 px-10 py-5 text-lg font-bold text-white rounded-2xl overflow-hidden transition-all duration-500 hover:scale-105 hover:shadow-glow-xl"
          aria-label="Start building in 5 minutes - Get started guide"
        >
          <!-- Animated gradient background -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 animate-gradient-x bg-200%"></div>
          
          <!-- Hover overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Shimmer effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          
          <!-- Glow effect -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 opacity-0 group-hover:opacity-30 blur-xl transition-opacity duration-500"></div>
          
          <span class="relative z-10 flex items-center gap-3">
            <svg class="w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Start Building in 5 Minutes
            <svg class="w-5 h-5 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </a>
        
        <a 
          href="#use-cases" 
          class="group relative inline-flex items-center justify-center gap-3 px-10 py-5 text-lg font-bold text-white rounded-2xl backdrop-blur-xl bg-white/5 border-2 border-white/10 hover:border-white/30 hover:bg-white/10 transition-all duration-500 hover:scale-105 hover:shadow-glow overflow-hidden"
          aria-label="See how Agentic SDLC works - View use cases"
        >
          <!-- Hover gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-pink-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Shimmer effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          
          <span class="relative z-10 flex items-center gap-3">
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            See How It Works
          </span>
        </a>
      </nav>
      
      <!-- Premium AI-style code block with enhanced glassmorphism -->
      <div class="relative max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.6s;" role="region" aria-label="Installation code example">
        <!-- Multi-layer glow effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 rounded-3xl blur-3xl"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-blue-400/10 to-purple-400/10 rounded-3xl blur-xl"></div>
        
        <!-- Main container with enhanced glass effect -->
        <div class="relative backdrop-blur-2xl bg-gradient-to-br from-slate-900/95 to-slate-800/95 border border-white/10 rounded-3xl overflow-hidden shadow-glass-lg">
          <!-- Top bar with macOS-style controls -->
          <div class="flex items-center justify-between px-6 py-4 border-b border-white/10 bg-gradient-to-r from-white/[0.08] to-white/[0.03]">
            <div class="flex items-center gap-4">
              <div class="flex gap-2" aria-hidden="true">
                <div class="w-3 h-3 rounded-full bg-red-500/90 hover:bg-red-400 transition-colors cursor-pointer"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/90 hover:bg-yellow-400 transition-colors cursor-pointer"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/90 hover:bg-green-400 transition-colors cursor-pointer"></div>
              </div>
              <span class="text-sm text-gray-400 font-mono flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                terminal
              </span>
            </div>
            <button 
              class="group flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-300 hover:text-white bg-white/5 hover:bg-white/10 rounded-lg transition-all duration-300 hover:scale-105"
              onclick="navigator.clipboard.writeText('npm install -g agentic-sdlc\\nagentic-sdlc create my-app'); this.innerHTML = '<svg class=\\'w-4 h-4\\' fill=\\'none\\' stroke=\\'currentColor\\' viewBox=\\'0 0 24 24\\'><path stroke-linecap=\\'round\\' stroke-linejoin=\\'round\\' stroke-width=\\'2\\' d=\\'M5 13l4 4L19 7\\'></path></svg> Copied!'; setTimeout(() => this.innerHTML = '<svg class=\\'w-4 h-4\\' fill=\\'none\\' stroke=\\'currentColor\\' viewBox=\\'0 0 24 24\\'><path stroke-linecap=\\'round\\' stroke-linejoin=\\'round\\' stroke-width=\\'2\\' d=\\'M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z\\'></path></svg> Copy', 2000)"
              aria-label="Copy installation command to clipboard"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Copy
            </button>
          </div>
          
          <!-- Code content with syntax highlighting -->
          <div class="p-8 bg-gradient-to-br from-slate-900/50 to-slate-800/50">
            <pre class="text-left font-mono text-sm leading-relaxed"><code><span class="text-gray-500"># Install globally</span>
<span class="text-blue-400">npm</span> <span class="text-purple-400">install</span> <span class="text-pink-400">-g</span> <span class="text-white">agentic-sdlc</span>

<span class="text-gray-500"># Create your project</span>
<span class="text-blue-400">agentic-sdlc</span> <span class="text-purple-400">create</span> <span class="text-white">my-app</span>

<span class="text-gray-500"># Start building with AI</span>
<span class="text-green-400">/pm</span> <span class="text-white">Build a todo app with auth</span></code></pre>
          </div>
          
          <!-- Bottom accent bar -->
          <div class="h-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500"></div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Animated scroll indicator with improved accessibility -->
  <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 scroll-indicator animate-fade-in" style="animation-delay: 1s;" aria-hidden="true">
    <div class="flex flex-col items-center gap-2 text-blue-300">
      <span class="text-sm font-medium">Scroll to explore</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  /* AI-inspired particle animation */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: radial-gradient(circle, rgba(99, 102, 241, 1) 0%, transparent 70%);
    border-radius: 50%;
    animation: particleFloat 8s ease-in-out infinite;
  }
  
  @keyframes particleFloat {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    25% {
      transform: translate(30px, -30px) scale(1.2);
      opacity: 0.6;
    }
    50% {
      transform: translate(-20px, -60px) scale(0.8);
      opacity: 0.4;
    }
    75% {
      transform: translate(40px, -40px) scale(1.1);
      opacity: 0.5;
    }
  }
  
  @keyframes animate-gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  
  .animate-gradient {
    background-size: 200% 200%;
    animation: animate-gradient 3s ease infinite;
  }
</style>
