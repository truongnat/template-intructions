---
// BrainArchitecture Component - Premium Brain System Architecture Visualization
// Features: Interactive SVG diagram, animated data flows, glassmorphism design

const brainFeatures = [
  {
    id: 'leann',
    icon: 'üîç',
    title: 'LEANN Vector Index',
    description: 'High-performance semantic search across all documents using HNSW algorithm',
    color: 'from-cyan-400 to-blue-500',
    position: 'left'
  },
  {
    id: 'neo4j',
    icon: 'üï∏Ô∏è',
    title: 'Neo4j Knowledge Graph',
    description: 'Store and query relationships between skills, errors, solutions, and documents',
    color: 'from-blue-500 to-indigo-600',
    position: 'center'
  },
  {
    id: 'learning',
    icon: 'üéì',
    title: 'Self-Learning Engine',
    description: 'Pattern recognition, error tracking, and intelligent recommendations',
    color: 'from-purple-500 to-pink-500',
    position: 'right'
  }
];

const capabilities = [
  { icon: '‚ö°', title: 'Error Pattern Detection', desc: 'Automatically link errors to proven solutions' },
  { icon: 'üéØ', title: 'Success Pattern Tracking', desc: 'Learn from what works and reuse patterns' },
  { icon: 'üí°', title: 'Smart Recommendations', desc: 'Get suggestions before starting tasks' },
  { icon: 'üîó', title: 'Reasoning Paths', desc: 'Discover how problems were solved before' },
  { icon: 'üìà', title: 'Compound Intelligence', desc: 'Knowledge grows exponentially across projects' },
  { icon: 'üîÑ', title: 'Auto-Sync', desc: 'All documents and learnings sync automatically' }
];
---

<section id="brain-architecture" class="section-container relative overflow-hidden">
  <!-- Enhanced background with neural network effect -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute w-[1000px] h-[1000px] bg-purple-500/10 rounded-full blur-3xl animate-float" style="top: -20%; left: -20%;"></div>
    <div class="absolute w-[800px] h-[800px] bg-cyan-500/10 rounded-full blur-3xl animate-float-slow" style="bottom: -20%; right: -20%;"></div>
    <div class="absolute w-[600px] h-[600px] bg-indigo-500/10 rounded-full blur-3xl animate-float" style="top: 50%; left: 50%; transform: translate(-50%, -50%); animation-delay: 2s;"></div>
    
    <!-- Neural network grid pattern -->
    <div class="neural-grid absolute inset-0 opacity-20"></div>
  </div>

  <div class="relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-slide-up">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-purple-500/10 to-cyan-500/10 border border-purple-500/20 backdrop-blur-xl mb-6">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-purple-500"></span>
        </span>
        <span class="text-sm font-semibold bg-gradient-to-r from-purple-400 to-cyan-400 bg-clip-text text-transparent">
          AI Brain System
        </span>
      </div>
      
      <h2 class="text-5xl sm:text-6xl lg:text-7xl font-black mb-6 leading-tight">
        <span class="gradient-text">Self-Learning</span>
        <br class="hidden sm:block">
        <span class="text-white">Intelligence</span>
      </h2>
      <p class="text-xl text-blue-200 max-w-3xl mx-auto leading-relaxed">
        A cognitive architecture that learns from every interaction, compounds knowledge across projects, and provides intelligent recommendations
      </p>
    </div>

    <!-- Main Architecture Diagram -->
    <div class="relative mb-20 animate-slide-up" style="animation-delay: 0.2s;">
      <!-- Glass container for diagram -->
      <div class="relative bg-gradient-to-br from-slate-900/95 via-slate-900/90 to-slate-800/95 backdrop-blur-2xl border border-slate-700/50 rounded-3xl p-8 lg:p-12 overflow-hidden">
        
        <!-- Animated border gradient -->
        <div class="absolute inset-0 rounded-3xl p-[1px] bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 opacity-50 animate-gradient-x bg-300%"></div>
        <div class="absolute inset-[1px] rounded-3xl bg-slate-900/95"></div>
        
        <!-- SVG Architecture Diagram -->
        <div class="relative z-10">
          <svg class="w-full h-auto" viewBox="0 0 1000 600" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <!-- Gradients -->
              <linearGradient id="brainGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#A855F7;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
              </linearGradient>
              
              <linearGradient id="leannGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#22D3EE;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:1" />
              </linearGradient>
              
              <linearGradient id="neo4jGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#6366F1;stop-opacity:1" />
              </linearGradient>
              
              <linearGradient id="learningGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#A855F7;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
              </linearGradient>
              
              <linearGradient id="dataFlowGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color:#22C55E;stop-opacity:0" />
                <stop offset="50%" style="stop-color:#22C55E;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#22C55E;stop-opacity:0" />
              </linearGradient>
              
              <!-- Glow filter -->
              <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              
              <!-- Particle for animation -->
              <circle id="particle" r="4" fill="#22C55E">
                <animate attributeName="opacity" values="0;1;0" dur="1s" repeatCount="indefinite"/>
              </circle>
            </defs>
            
            <!-- Background grid -->
            <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(148, 163, 184, 0.1)" stroke-width="1"/>
            </pattern>
            <rect width="100%" height="100%" fill="url(#grid)" opacity="0.5"/>
            
            <!-- AI Agents Node (Top) -->
            <g class="diagram-node" transform="translate(500, 60)">
              <rect x="-120" y="-40" width="240" height="80" rx="16" fill="url(#brainGradient)" filter="url(#glow)" class="node-pulse"/>
              <text x="0" y="-8" text-anchor="middle" fill="white" font-size="16" font-weight="bold">ü§ñ AI Agents</text>
              <text x="0" y="16" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="14">12 Specialized Roles</text>
            </g>
            
            <!-- Connection Lines with Animated Particles -->
            <!-- Agent to LEANN -->
            <path d="M 400 100 Q 280 180, 200 220" stroke="rgba(34, 211, 238, 0.3)" stroke-width="3" fill="none" class="connection-line"/>
            <circle r="6" fill="#22D3EE" class="data-particle">
              <animateMotion dur="2s" repeatCount="indefinite">
                <mpath href="#pathToLeann"/>
              </animateMotion>
            </circle>
            <path id="pathToLeann" d="M 400 100 Q 280 180, 200 220" fill="none"/>
            
            <!-- Agent to Neo4j -->
            <path d="M 500 120 L 500 220" stroke="rgba(99, 102, 241, 0.3)" stroke-width="3" fill="none" class="connection-line"/>
            <circle r="6" fill="#6366F1" class="data-particle">
              <animateMotion dur="1.5s" repeatCount="indefinite">
                <mpath href="#pathToNeo4j"/>
              </animateMotion>
            </circle>
            <path id="pathToNeo4j" d="M 500 120 L 500 220" fill="none"/>
            
            <!-- Agent to Learning -->
            <path d="M 600 100 Q 720 180, 800 220" stroke="rgba(168, 85, 247, 0.3)" stroke-width="3" fill="none" class="connection-line"/>
            <circle r="6" fill="#A855F7" class="data-particle">
              <animateMotion dur="2s" repeatCount="indefinite" begin="0.5s">
                <mpath href="#pathToLearning"/>
              </animateMotion>
            </circle>
            <path id="pathToLearning" d="M 600 100 Q 720 180, 800 220" fill="none"/>
            
            <!-- LEANN Node -->
            <g class="diagram-node" transform="translate(200, 280)">
              <rect x="-140" y="-50" width="280" height="100" rx="16" fill="url(#leannGradient)" filter="url(#glow)" class="node-pulse"/>
              <text x="0" y="-18" text-anchor="middle" fill="white" font-size="18" font-weight="bold">üîç LEANN Index</text>
              <text x="0" y="8" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="13">Vector Storage (HNSW)</text>
              <text x="0" y="28" text-anchor="middle" fill="rgba(255,255,255,0.6)" font-size="12">Semantic Search</text>
            </g>
            
            <!-- Neo4j Node -->
            <g class="diagram-node" transform="translate(500, 280)">
              <rect x="-140" y="-50" width="280" height="100" rx="16" fill="url(#neo4jGradient)" filter="url(#glow)" class="node-pulse"/>
              <text x="0" y="-18" text-anchor="middle" fill="white" font-size="18" font-weight="bold">üï∏Ô∏è Neo4j Graph</text>
              <text x="0" y="8" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="13">Knowledge Relationships</text>
              <text x="0" y="28" text-anchor="middle" fill="rgba(255,255,255,0.6)" font-size="12">Documents ‚Ä¢ Skills ‚Ä¢ Errors</text>
            </g>
            
            <!-- Self-Learning Engine Node -->
            <g class="diagram-node" transform="translate(800, 280)">
              <rect x="-140" y="-50" width="280" height="100" rx="16" fill="url(#learningGradient)" filter="url(#glow)" class="node-pulse"/>
              <text x="0" y="-18" text-anchor="middle" fill="white" font-size="18" font-weight="bold">üéì Learning Engine</text>
              <text x="0" y="8" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="13">Pattern Recognition</text>
              <text x="0" y="28" text-anchor="middle" fill="rgba(255,255,255,0.6)" font-size="12">Recommendations</text>
            </g>
            
            <!-- Connections between bottom nodes -->
            <path d="M 340 280 L 360 280" stroke="rgba(99, 102, 241, 0.4)" stroke-width="2" fill="none" stroke-dasharray="6,4" class="connection-line"/>
            <path d="M 640 280 L 660 280" stroke="rgba(168, 85, 247, 0.4)" stroke-width="2" fill="none" stroke-dasharray="6,4" class="connection-line"/>
            
            <!-- Central Knowledge Hub -->
            <g class="diagram-node" transform="translate(500, 440)">
              <circle r="70" fill="url(#brainGradient)" filter="url(#glow)" class="node-pulse-slow"/>
              <circle r="60" fill="rgba(15, 23, 42, 0.8)"/>
              <text x="0" y="-12" text-anchor="middle" fill="white" font-size="28">üß†</text>
              <text x="0" y="18" text-anchor="middle" fill="white" font-size="14" font-weight="bold">BRAIN</text>
              <text x="0" y="36" text-anchor="middle" fill="rgba(255,255,255,0.7)" font-size="11">Compound Knowledge</text>
            </g>
            
            <!-- Connections to central hub -->
            <path d="M 200 330 Q 350 400, 440 440" stroke="rgba(34, 211, 238, 0.3)" stroke-width="2" fill="none" class="connection-line"/>
            <path d="M 500 330 L 500 370" stroke="rgba(99, 102, 241, 0.3)" stroke-width="2" fill="none" class="connection-line"/>
            <path d="M 800 330 Q 650 400, 560 440" stroke="rgba(168, 85, 247, 0.3)" stroke-width="2" fill="none" class="connection-line"/>
            
            <!-- Animated particles on hub connections -->
            <circle r="5" fill="#22D3EE" class="data-particle">
              <animateMotion dur="2.5s" repeatCount="indefinite">
                <mpath href="#hubPath1"/>
              </animateMotion>
            </circle>
            <path id="hubPath1" d="M 200 330 Q 350 400, 440 440" fill="none"/>
            
            <circle r="5" fill="#6366F1" class="data-particle">
              <animateMotion dur="1.8s" repeatCount="indefinite" begin="0.3s">
                <mpath href="#hubPath2"/>
              </animateMotion>
            </circle>
            <path id="hubPath2" d="M 500 330 L 500 370" fill="none"/>
            
            <circle r="5" fill="#A855F7" class="data-particle">
              <animateMotion dur="2.5s" repeatCount="indefinite" begin="0.6s">
                <mpath href="#hubPath3"/>
              </animateMotion>
            </circle>
            <path id="hubPath3" d="M 800 330 Q 650 400, 560 440" fill="none"/>
            
            <!-- Output arrows -->
            <g transform="translate(500, 530)">
              <text x="0" y="0" text-anchor="middle" fill="rgba(255,255,255,0.5)" font-size="12">‚Üì Projects Benefit Automatically ‚Üì</text>
            </g>
          </svg>
        </div>
        
        <!-- Legend -->
        <div class="relative z-10 mt-8 flex flex-wrap justify-center gap-6 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full bg-gradient-to-r from-cyan-400 to-blue-500"></div>
            <span class="text-slate-300">Vector Search</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600"></div>
            <span class="text-slate-300">Knowledge Graph</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full bg-gradient-to-r from-purple-500 to-pink-500"></div>
            <span class="text-slate-300">Learning Engine</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-400 animate-ping"></div>
            <span class="text-slate-300">Data Flow</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Capabilities Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {capabilities.map((cap, index) => (
        <div 
          class="group relative animate-slide-up"
          style={`animation-delay: ${0.3 + index * 0.1}s;`}
        >
          <!-- Glow effect on hover -->
          <div class="absolute -inset-1 bg-gradient-to-br from-purple-500/30 via-cyan-500/20 to-pink-500/30 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
          
          <!-- Card -->
          <div class="relative bg-gradient-to-br from-slate-900/95 to-slate-800/95 backdrop-blur-xl border border-slate-700/50 rounded-2xl p-6 transition-all duration-500 group-hover:border-purple-500/50 group-hover:-translate-y-1 h-full">
            <!-- Icon -->
            <div class="w-14 h-14 mb-4 rounded-xl bg-gradient-to-br from-purple-500/20 to-cyan-500/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform duration-300">
              {cap.icon}
            </div>
            
            <!-- Content -->
            <h3 class="text-lg font-bold text-white mb-2 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-purple-400 group-hover:to-cyan-400 group-hover:bg-clip-text transition-all duration-300">
              {cap.title}
            </h3>
            <p class="text-slate-400 text-sm group-hover:text-slate-300 transition-colors duration-300">
              {cap.desc}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- How It Works Section -->
    <div class="relative animate-slide-up" style="animation-delay: 0.8s;">
      <div class="bg-gradient-to-r from-purple-500/10 via-cyan-500/10 to-pink-500/10 backdrop-blur-xl border border-purple-500/20 rounded-3xl p-8 lg:p-12">
        <h3 class="text-3xl font-bold text-center mb-10 text-white">
          How the <span class="gradient-text">Brain</span> Learns
        </h3>
        
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Step 1 -->
          <div class="text-center relative">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-cyan-500/30">
              1
            </div>
            <h4 class="font-bold text-white mb-2">Encounter Problem</h4>
            <p class="text-sm text-slate-400">AI agents face errors or complex tasks</p>
            <!-- Connector (hidden on last) -->
            <div class="hidden md:block absolute top-8 right-0 w-full h-0.5 bg-gradient-to-r from-cyan-500/50 to-transparent translate-x-1/2"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="text-center relative">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-blue-500/30">
              2
            </div>
            <h4 class="font-bold text-white mb-2">Search Knowledge</h4>
            <p class="text-sm text-slate-400">Query LEANN + Neo4j for solutions</p>
            <div class="hidden md:block absolute top-8 right-0 w-full h-0.5 bg-gradient-to-r from-blue-500/50 to-transparent translate-x-1/2"></div>
          </div>
          
          <!-- Step 3 -->
          <div class="text-center relative">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-indigo-500/30">
              3
            </div>
            <h4 class="font-bold text-white mb-2">Apply & Solve</h4>
            <p class="text-sm text-slate-400">Use patterns to resolve faster</p>
            <div class="hidden md:block absolute top-8 right-0 w-full h-0.5 bg-gradient-to-r from-purple-500/50 to-transparent translate-x-1/2"></div>
          </div>
          
          <!-- Step 4 -->
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-purple-500/30">
              4
            </div>
            <h4 class="font-bold text-white mb-2">Record & Learn</h4>
            <p class="text-sm text-slate-400">Store new patterns for future use</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12 animate-slide-up" style="animation-delay: 1s;">
      <a 
        href="https://github.com/truongnat/agentic-sdlc" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-10 py-5 bg-gradient-to-r from-purple-600 via-indigo-600 to-cyan-600 text-white font-bold text-lg rounded-2xl hover:shadow-2xl hover:shadow-purple-500/50 transition-all duration-300 hover:scale-105"
      >
        <span class="text-xl">üß†</span>
        Explore Brain Workflow
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Neural network grid pattern */
  .neural-grid {
    background-image: 
      linear-gradient(rgba(168, 85, 247, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(168, 85, 247, 0.1) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }
  
  /* Node pulse animation */
  .node-pulse {
    animation: nodePulse 3s ease-in-out infinite;
  }
  
  .node-pulse-slow {
    animation: nodePulse 4s ease-in-out infinite;
  }
  
  @keyframes nodePulse {
    0%, 100% {
      filter: url(#glow);
      opacity: 1;
    }
    50% {
      filter: url(#glow) brightness(1.2);
      opacity: 0.9;
    }
  }
  
  /* Connection line animation */
  .connection-line {
    stroke-dasharray: 200;
    animation: connectionFlow 3s linear infinite;
  }
  
  @keyframes connectionFlow {
    0% {
      stroke-dashoffset: 200;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }
  
  /* Data particle glow */
  .data-particle {
    filter: drop-shadow(0 0 6px currentColor);
  }
  
  /* Diagram node hover effect */
  .diagram-node {
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .diagram-node:hover {
    transform: scale(1.02);
  }
  
  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .node-pulse,
    .node-pulse-slow {
      animation: none;
    }
    
    .connection-line {
      animation: none;
      stroke-dasharray: none;
    }
    
    .data-particle {
      display: none;
    }
    
    .neural-grid {
      animation: none;
    }
  }
</style>
