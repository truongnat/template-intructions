---
const useCases = [
  {
    title: 'Solo Developer',
    description: 'Build complete applications faster with AI handling planning, design, testing, and documentation',
    code: '/auto Create a SaaS platform\n# Complete in days, not weeks',
    icon: 'ðŸ‘¤',
    gradient: 'from-blue-500 to-purple-500'
  },
  {
    title: 'Team Project',
    description: 'Consistent workflow and quality across your team with shared knowledge and automated processes',
    code: 'agentic-sdlc ide all\nagentic-sdlc init-kb\n# Shared workflow',
    icon: 'ðŸ‘¥',
    gradient: 'from-purple-500 to-pink-500'
  },
  {
    title: 'Existing Project',
    description: 'Add SDLC automation to any existing codebase without disrupting your current workflow',
    code: 'agentic-sdlc install\nagentic-sdlc ide cursor\n# Enhance existing projects',
    icon: 'ðŸ”§',
    gradient: 'from-pink-500 to-rose-500'
  }
];
---

<section id="use-cases" class="section-container relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute w-96 h-96 bg-purple-500/10 rounded-full blur-3xl" style="top: 10%; left: 5%;"></div>
    <div class="absolute w-96 h-96 bg-pink-500/10 rounded-full blur-3xl" style="bottom: 10%; right: 5%;"></div>
  </div>
  
  <div class="relative z-10">
    <!-- Section header -->
    <div class="text-center mb-20 animate-slide-up">
      <h2 class="text-5xl sm:text-6xl font-black mb-6">
        <span class="gradient-text">Built For Every Scenario</span>
      </h2>
      <p class="text-xl text-blue-200 max-w-2xl mx-auto">
        Whether you're solo or in a team, starting fresh or enhancing existing projects
      </p>
    </div>
    
    <!-- Use cases grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {useCases.map((useCase, index) => (
        <div 
          class="group relative animate-slide-up"
          style={`animation-delay: ${index * 0.15}s;`}
        >
          <!-- Card container with flip effect -->
          <div class="relative h-full preserve-3d group-hover:rotate-y-180 transition-all duration-700">
            <!-- Front of card -->
            <div class="glass-card h-full backface-hidden">
              <!-- Icon with gradient -->
              <div class={`w-16 h-16 rounded-xl bg-gradient-to-br ${useCase.gradient} flex items-center justify-center text-3xl mb-6 group-hover:scale-110 transition-transform duration-300`}>
                {useCase.icon}
              </div>
              
              <h3 class="text-3xl font-bold mb-4 group-hover:gradient-text transition-all duration-300">
                {useCase.title}
              </h3>
              
              <p class="text-blue-200 leading-relaxed mb-6">
                {useCase.description}
              </p>
              
              <!-- Hover hint -->
              <div class="flex items-center gap-2 text-blue-400 text-sm font-medium">
                <span>Hover to see code</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
            </div>
            
            <!-- Back of card (code) -->
            <div class="absolute inset-0 backface-hidden rotate-y-180">
              <div class="glass-card h-full flex flex-col">
                <div class="flex items-center justify-between mb-4">
                  <span class="text-sm font-medium text-blue-400">Example Code</span>
                  <button 
                    class="text-gray-400 hover:text-white transition-colors text-sm"
                    onclick={`navigator.clipboard.writeText('${useCase.code.replace(/\n/g, '\\n')}'); this.innerHTML = 'âœ“ Copied!'; setTimeout(() => this.innerHTML = 'ðŸ“‹ Copy', 2000)`}
                  >
                    ðŸ“‹ Copy
                  </button>
                </div>
                
                <div class="code-block flex-1 flex items-center">
                  <pre class="text-sm"><code class="text-green-400">{useCase.code}</code></pre>
                </div>
                
                <div class="mt-4 text-center">
                  <span class="text-sm text-blue-400">Hover away to flip back</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="text-center mt-16 animate-slide-up" style="animation-delay: 0.6s;">
      <a href="https://github.com/truongnat/agentic-sdlc#use-cases" target="_blank" class="btn-primary">
        <span class="relative z-10">View More Examples</span>
      </a>
    </div>
  </div>
</section>

<style>
  .preserve-3d {
    transform-style: preserve-3d;
  }
  
  .backface-hidden {
    backface-visibility: hidden;
  }
  
  .rotate-y-180 {
    transform: rotateY(180deg);
  }
  
  @media (hover: none) {
    /* Disable flip on touch devices */
    .group:active .preserve-3d {
      transform: rotateY(180deg);
    }
  }
</style>
