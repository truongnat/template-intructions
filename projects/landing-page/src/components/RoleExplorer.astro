---
const roles = [
  {
    id: "pm",
    name: "@PM",
    title: "Project Manager",
    desc: "Plans sprints, defines scope, and tracks progress.",
    cmd: "/pm",
    responsibilities: ["Project Planning", "Scope Management", "Task Tracking"],
    color: "from-blue-500 to-cyan-500",
    bg: "bg-blue-500/10",
    border: "border-blue-500/20"
  },
  {
    id: "sa",
    name: "@SA",
    title: "System Architect",
    desc: "Designs system architecture, database schema, and APIs.",
    cmd: "/sa",
    responsibilities: ["System Design", "DB Schema", "API Specs"],
    color: "from-purple-500 to-indigo-500",
    bg: "bg-purple-500/10",
    border: "border-purple-500/20"
  },
  {
    id: "uiux",
    name: "@UIUX",
    title: "UI/UX Designer",
    desc: "Creates design specifications, mockups, and assets.",
    cmd: "/uiux",
    responsibilities: ["UI Design", "UX Flows", "Design Systems"],
    color: "from-pink-500 to-rose-500",
    bg: "bg-pink-500/10",
    border: "border-pink-500/20"
  },
  {
    id: "po",
    name: "@PO",
    title: "Product Owner",
    desc: "Manages product backlog and prioritizes features.",
    cmd: "/po",
    responsibilities: ["Backlog Mgmt", "Prioritization", "User Stories"],
    color: "from-orange-500 to-amber-500",
    bg: "bg-orange-500/10",
    border: "border-orange-500/20"
  },
  {
    id: "qa",
    name: "@QA",
    title: "QA Engineer",
    desc: "Reviews designs and creates test plans.",
    cmd: "/qa",
    responsibilities: ["Design Review", "Test Planning", "Quality Gates"],
    color: "from-teal-500 to-emerald-500",
    bg: "bg-teal-500/10",
    border: "border-teal-500/20"
  },
  {
    id: "seca",
    name: "@SECA",
    title: "Security Analyst",
    desc: "Conducts security reviews and vulnerability assessments.",
    cmd: "/seca",
    responsibilities: ["Security Audits", "Threat Modeling", "Compliance"],
    color: "from-red-500 to-rose-500",
    bg: "bg-red-500/10",
    border: "border-red-500/20"
  },
  {
    id: "dev",
    name: "@DEV",
    title: "Developer",
    desc: "Implements features, fixes bugs, and writes code.",
    cmd: "/dev",
    responsibilities: ["Coding", "Implementation", "Unit Testing"],
    color: "from-green-500 to-emerald-500",
    bg: "bg-green-500/10",
    border: "border-green-500/20"
  },
  {
    id: "devops",
    name: "@DEVOPS",
    title: "DevOps Engineer",
    desc: "Manages infrastructure, CI/CD, and deployment.",
    cmd: "/devops",
    responsibilities: ["Infrastructure", "CI/CD Pipelines", "Deployment"],
    color: "from-slate-500 to-gray-500",
    bg: "bg-slate-500/10",
    border: "border-slate-500/20"
  },
  {
    id: "tester",
    name: "@TESTER",
    title: "Tester",
    desc: "Executes manual and automated tests.",
    cmd: "/tester",
    responsibilities: ["E2E Testing", "Manual Testing", "Bug Reporting"],
    color: "from-yellow-500 to-lime-500",
    bg: "bg-yellow-500/10",
    border: "border-yellow-500/20"
  },
  {
    id: "reporter",
    name: "@REPORTER",
    title: "Reporter",
    desc: "Compiles project reports and documentation.",
    cmd: "/reporter",
    responsibilities: ["Daily Reports", "Documentation", "Changelogs"],
    color: "from-cyan-500 to-sky-500",
    bg: "bg-cyan-500/10",
    border: "border-cyan-500/20"
  },
  {
    id: "auth", // Using 'auth' for Stakeholder to allow approval
    name: "@STAKEHOLDER",
    title: "Stakeholder",
    desc: "Reviews deliverables and provides final approval.",
    cmd: "/approve",
    responsibilities: ["Final Review", "Approval", "Feedback"],
    color: "from-violet-500 to-purple-500",
    bg: "bg-violet-500/10",
    border: "border-violet-500/20"
  },
  {
    id: "auto", // Using 'auto' for Orchestrator
    name: "@ORCHESTRATOR",
    title: "Orchestrator",
    desc: "Automates the entire workflow from start to finish.",
    cmd: "/auto",
    responsibilities: ["Automation", "Coordination", "Flow Mgmt"],
    color: "from-indigo-500 to-blue-500",
    bg: "bg-indigo-500/10",
    border: "border-indigo-500/20"
  }
];
---

<section id="roles" class="py-24 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-slate-950 pointer-events-none -z-20"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-blue-900/10 via-slate-950 to-slate-950 -z-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-5xl font-black mb-6 tracking-tight">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-slate-400">
          Meet Your New
        </span>
        <br />
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400">
          AI Development Team
        </span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed">
        12 specialized AI agents working together to plan, design, build, test, and deploy your software.
        Just like a real team, but faster and available 24/7.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {roles.map((role) => (
        <div class="group relative h-64 perspective-1000">
          <div class={`absolute inset-0 rounded-2xl bg-gradient-to-br ${role.color} opacity-0 group-hover:opacity-10 transition-opacity duration-500 blur-xl`}></div>
          
          <div class={`relative h-full bg-slate-900/50 backdrop-blur-xl border border-white/5 rounded-2xl p-6 transition-all duration-300 group-hover:bg-slate-800/80 group-hover:border-white/10 group-hover:-translate-y-2 group-hover:shadow-2xl overflow-hidden flex flex-col`}>
             <!-- Card Content -->
             <div class="flex items-start justify-between mb-4">
               <div class={`p-3 rounded-xl ${role.bg} border ${role.border}`}>
                 <!-- Simple Bot Icon -->
                 <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                 </svg>
               </div>
               <span class="text-xs font-mono text-slate-500 bg-slate-950 px-2 py-1 rounded border border-white/5 group-hover:border-white/20 transition-colors">
                  {role.cmd}
               </span>
             </div>

             <div class="mb-auto">
               <h3 class="text-xl font-bold text-white mb-1 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-white group-hover:to-slate-300 transition-all">
                 {role.name}
               </h3>
               <p class="text-sm font-medium text-slate-400 group-hover:text-slate-300 mb-2">{role.title}</p>
               <p class="text-sm text-slate-500 leading-relaxed group-hover:opacity-0 transition-opacity duration-300 absolute">
                 {role.desc}
               </p>
             </div>

             <!-- Reveal on Hover -->
             <div class="absolute inset-x-6 bottom-6 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 delay-75">
               <div class="h-px w-full bg-gradient-to-r from-transparent via-white/10 to-transparent mb-4"></div>
               <ul class="text-sm space-y-1">
                 {role.responsibilities.map(item => (
                   <li class="flex items-center text-slate-300">
                     <svg class="w-3 h-3 text-green-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                     {item}
                   </li>
                 ))}
               </ul>
             </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <a href="#quick-start" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-white/5 border border-white/10 rounded-full hover:bg-white/10 hover:scale-105 transition-all duration-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
        <span>Assemble Your Team</span>
      </a>
    </div>
  </div>
</section>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
