---
// GitHub Stats Component - Shows live repository statistics
---

<section id="github-stats" class="section-container relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute w-96 h-96 bg-green-500/10 rounded-full blur-3xl" style="top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
  </div>
  
  <div class="relative z-10">
    <!-- Section header -->
    <div class="text-center mb-16 animate-slide-up">
      <h2 class="text-5xl sm:text-6xl font-black mb-6">
        <span class="gradient-text">Join the Community</span>
      </h2>
      <p class="text-xl text-blue-200 max-w-2xl mx-auto">
        Trusted by developers worldwide. Open source and growing.
      </p>
    </div>
    
    <!-- Stats grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Stars -->
      <div class="glass-card text-center group animate-slide-up" style="animation-delay: 0.1s;">
        <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-yellow-500 to-orange-500 flex items-center justify-center text-4xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
          ‚≠ê
        </div>
        <div class="text-5xl font-black mb-2 gradient-text" data-stat="stars">
          1.2K+
        </div>
        <p class="text-blue-200 text-lg">GitHub Stars</p>
        <p class="text-blue-300 text-sm mt-2">Growing daily</p>
      </div>
      
      <!-- Contributors -->
      <div class="glass-card text-center group animate-slide-up" style="animation-delay: 0.2s;">
        <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center text-4xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
          üë•
        </div>
        <div class="text-5xl font-black mb-2 gradient-text" data-stat="contributors">
          50+
        </div>
        <p class="text-blue-200 text-lg">Contributors</p>
        <p class="text-blue-300 text-sm mt-2">Open source community</p>
      </div>
      
      <!-- Downloads -->
      <div class="glass-card text-center group animate-slide-up" style="animation-delay: 0.3s;">
        <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center text-4xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
          üì¶
        </div>
        <div class="text-5xl font-black mb-2 gradient-text" data-stat="downloads">
          10K+
        </div>
        <p class="text-blue-200 text-lg">NPM Downloads</p>
        <p class="text-blue-300 text-sm mt-2">Monthly installs</p>
      </div>
    </div>
    
    <!-- CTA (Sprint 3 - Benefit-driven) -->
    <div class="text-center mt-16 animate-slide-up" style="animation-delay: 0.5s;">
      <a href="#quick-start" class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-green-500/50 transition-all duration-300 hover:scale-105">
        <span>Start Your First Project</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Optional: Fetch live stats from GitHub API
  // This is a placeholder - implement if needed
  async function fetchGitHubStats() {
    try {
      const response = await fetch('https://api.github.com/repos/truongnat/agentic-sdlc');
      const data = await response.json();
      
      // Update stars
      const starsEl = document.querySelector('[data-stat="stars"]');
      if (starsEl && data.stargazers_count) {
        starsEl.textContent = formatNumber(data.stargazers_count);
      }
    } catch (error) {
      console.log('Using static stats');
    }
  }
  
  function formatNumber(num) {
    if (num >= 1000) {
      return (num / 1000).toFixed(1) + 'K+';
    }
    return num + '+';
  }
  
  // Uncomment to enable live stats
  // fetchGitHubStats();
</script>
