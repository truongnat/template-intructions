<div id="sticky-cta" class="fixed top-0 left-0 right-0 z-50 bg-slate-950/95 backdrop-blur-lg border-b border-white/10 transform -translate-y-full transition-transform duration-300">
  <div class="section-container py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <span class="text-2xl">ðŸš€</span>
        <div>
          <p class="text-sm font-semibold text-white">Agentic SDLC</p>
          <p class="text-xs text-gray-400">Ship apps in days, not months</p>
        </div>
      </div>
      <a href="#quick-start" class="btn-primary-sm">
        Try Free
      </a>
    </div>
  </div>
</div>

<script>
  // Show sticky CTA after scrolling past hero
  const stickyCTA = document.getElementById('sticky-cta');
  const heroHeight = window.innerHeight;
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > heroHeight * 0.8) {
      stickyCTA?.classList.remove('-translate-y-full');
    } else {
      stickyCTA?.classList.add('-translate-y-full');
    }
  });
</script>

<style>
